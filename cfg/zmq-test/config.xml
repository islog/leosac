<?xml version="1.0"?>
        <kernel>
    <plugin_directories>
        <plugindir>.</plugindir>
    </plugin_directories>

    <modules>
        <module>
            <name>STDIN</name>
            <file>libstdin-controller.so</file>

        </module>

        <module>
            <name>MONITOR</name>
            <file>libpersistent-monitor.so</file>

            <module_config>
                <file>MY_LOGS.txt</file>
                <verbose>true</verbose>
            </module_config>
        </module>

        <module>
            <name>PIFACE-GPIO</name>
            <file>libpifacedigital.so</file>

            <module_config>
                <gpios>
                    <gpio>
                        <name>YELLOW</name>
                        <no>7</no>
                        <direction>out</direction>
                    </gpio>
                </gpios>
            </module_config>
        </module>

    </modules>

</kernel>