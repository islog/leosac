<?xml version="1.0"?>
<hardware>
    <platform name="RaspberryPi rev2"/>
    <devices>
        <device type="relay" name="relayA">
            <gpio pin="2"/>
        </device>
        <device type="led" name="led1">
            <gpio pin="3"/>
        </device>
        <device type="sysfsled" name="greenled" ledname="led0"/>
        <device type="wiegandreader" name="r10reader">
            <higpio pin="15" direction="in" interruptmode="falling"/>
            <logpio pin="14" direction="in" interruptmode="falling"/>
        </device>
        <device type="buzzer" name="buzzerA">
            <gpio pin="18"/>
        </device>
    </devices>
</hardware>
