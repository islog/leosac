<?xml version="1.0"?>
<hardware>
    <!-- if the platform name is "raspberry_piface", the hwManager will use an other GPIO provider (this is currenly
    hardcoded into the application).
    We use 0-7 for INPUT pin number, and 8-15 for OUTPUT pin number
    -->
    <platform name="raspberry_piface" />
    <devices>
        <!-- This is RELAY 1 -->
        <device type="led" name="wiegand_green">
            <gpio pin="11"/>
        </device>
        <!-- This is RELAY 2 -->
        <device type="led" name="wiegand_buzz">
            <gpio pin="10"/>
        </device>

        <device type="led" name="denied_led">
            <gpio pin="15"></gpio>
        </device>

        <device type="wiegandreader" name="r10reader">
            <logpio pin="2" />
            <higpio pin="0" />
        </device>
    </devices>
</hardware>
